<body>
  <%- include('partials/header') -%>
  <div class="container">
    <form action="/articles/<%=article.slug%>/edit" method="POST">
      <h1>Update Article Details</h1>
      <input type="text" name="title" placeholder="Enter Title of Article" value="<%=article.title%>">
      <textarea name="description" id="" cols="30" rows="5" placeholder="Enter Description of Article"><%=article.description%></textarea>
      <input type="submit" value="Update">
    </form>
    <div class="">
      <a class="btn-add" href="/articles/">
        back
      </a>

    </div>
  </div>
  <%- include('partials/footer') -%>

